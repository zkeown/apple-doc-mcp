{
  "name": "apple-doc-mcp-server",
  "version": "2.0.0",
  "description": "MCP server providing seamless access to Apple Developer Documentation with smart search and wildcard support",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "apple-doc-mcp-server": "dist/index.js"
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "mcp",
    "apple",
    "documentation",
    "ios",
    "macos",
    "swiftui",
    "uikit"
  ],
  "author": "zakkeown",
  "contributors": [
    "MightyDillah (original author)"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/zakkeown/apple-doc-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/zakkeown/apple-doc-mcp/issues"
  },
  "homepage": "https://github.com/zakkeown/apple-doc-mcp#readme",
  "scripts": {
    "build": "tsc && chmod +x dist/index.js",
    "lint": "tsc --noEmit && xo src",
    "lint:fix": "tsc --noEmit && xo src --fix",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "verify": "pnpm lint && pnpm test && pnpm build",
    "prepare": "husky"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.20.2",
    "axios": "^1.12.2",
    "p-limit": "^7.2.0",
    "pino": "^10.1.0",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@types/node": "^24.9.1",
    "@vitest/coverage-v8": "^4.0.14",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "typescript": "^5.9.3",
    "vitest": "^4.0.14",
    "xo": "^1.2.3"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "xo --fix"
    ]
  }
}
